        <div style="float:left;width:50px;text-align:center;">
            <a href="{{ path('articles') }}"><img style="position:relative;top:10%;" src={{ asset("images/accueil.png") }} width=40 height=40 /></a>
        </div>    
        
        <div style="float:left;text-align:center;width:100%;position:relative;transform: translate(0%, -30%);">
